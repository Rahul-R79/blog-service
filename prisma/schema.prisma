generator client {
  provider = "prisma-client"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
}


model Post {
  id        String   @id @default(uuid())
  authorId  String   // Reference to User ID from Auth Service
  title     String
  content   String
  image     String
  category  Int
  readTime Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
